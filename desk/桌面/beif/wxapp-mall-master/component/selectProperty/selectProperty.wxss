.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
}

.popup-join-btn-on{
    background-color: #fd504d;
}
 
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}

.scrollBox{
    max-height: 600rpx;
    overflow-y:auto;
    overflow-x:hidden;
}

.footer-box .cartNum{
    position: absolute;
    right: 20rpx;
    top: 6rpx;
    font-size: 24rpx;
    padding:2rpx 10rpx;
    border-radius: 50%;
    color: #fff;
    background-color: #e73c39;
    line-height: normal;
}

.footer-box .showAnimate{
    position: absolute;
    right: 8rpx;
    top: -24rpx;
    font-weight: bold;
    font-size: 26rpx;
    color: #e73c39;
    line-height: normal;
    visibility: hidden;
}

.footer-box .showAnimate.on{
    animation: showcartNum 1s forwards; 
    -webkit-animation :showcartNum 1s forwards; 
}

@-webkit-keyframes showcartNum{
    0%{
        visibility: visible;
        transform: translateY(0);
        opacity: 1;
    }
    80%{
        transform: translateY(-40rpx);
        opacity: 9;
    }
    100%{
        transform: translateY(-40rpx);
        opacity: 0;
    }
}

@keyframes showcartNum{
    0%{
        visibility: visible;
        transform: translateY(0);
        opacity: 1;
    }
    80%{
        transform: translateY(-40rpx);
        opacity: 9;
    }
    100%{
        transform: translateY(-40rpx);
        opacity: 0;
        visibility: hidden;
    }
}


