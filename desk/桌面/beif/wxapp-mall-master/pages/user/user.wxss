@import '../common/common.wxss';

page{
    background-color: #f0f2f5;
}
.imageBox{
    position: relative;
}

.imageBox .bgimg{
    display: block;
    width: 100%;
}

.imageBox .headbox{
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;

}

.imageBox .userInfoWp{
    width: 200rpx;
    overflow: hidden;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}

.imageBox .userInfoWp text{
    display: block;
    color: #fff;
}

.imageBox .userInfoWp image{
    border-radius: 50%;
    margin-bottom: 12rpx;
    width: 180rpx;
    height: 180rpx;
}

.listbox{
    margin-bottom: 20rpx;
    border-top:2rpx solid #ccc;
    border-bottom:2rpx solid #ccc;
    background-color: #fff;
}

.listbox .list{
    height: 90rpx;
    line-height: 90rpx;
    border-top:2rpx solid #ccc;
    padding: 0 20rpx;
    position: relative;
}

.listbox .list text{
    color: #999;
    font-size: 34rpx
}

.listbox .list:first-child{
    border-top:0;
}

