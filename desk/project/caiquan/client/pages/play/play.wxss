/* pages/play/play.wxss */

.duishouBox{
    margin-bottom: 40rpx;
}

.duishouBox image{
    display: block;
    margin: 20rpx auto 10rpx;
    width: 140rpx;
    height: 140rpx;
    background-color: #f34;
    border-radius: 50%;
}

.duishouBox .duishouName{
    text-align: center;
    font-size: 36rpx;
    color: #333;
}


.myBox{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    margin-bottom: 160rpx;
}

.inp-num{
    display: block;
    border: 1px solid #ddd;
    width: 320rpx;
    text-align: center;
    font-size: 32rpx;
    color: #333;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto 40rpx;
    border-radius: 10rpx;
}

page .sentNumBtn{
    display: block;
    width: 220rpx;
    text-align: center;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto 40rpx;
    border-radius: 10rpx;
    background-color: #489af7;
    color: #fff;
}


.timeBox{
    height: 260rpx;
}

.timeBox text{
    font-size: 120rpx;
    color: #999;
}

.playAgainBox{
    position: absolute;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5); 
    transform: translate3d(100%,0,0);
    transition: transform .3s;
}

.playAgainBox.active{
    transform: translate3d(0,0,0);    
}

.playAgainBox .bufu{
    display: block;
    text-align: center;
    margin-bottom: 40rpx;
    color: #fff;
}

.playAgainBox .playagain{
    display: block;
    width: 220rpx;
    text-align: center;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 auto 40rpx;
    border-radius: 10rpx;
    background-color: #489af7;
    color: #fff;
}


@import '../common/common.wxss';